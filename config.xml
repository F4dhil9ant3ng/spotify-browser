<?xml version='1.0' encoding='utf-8'?>
<widget id="org.devgirl.browser.spotify" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spotify Browser</name>
    <description>
        A sample Spotify browser built with Framework7.
    </description>
    <author email="dev@phonegap.com" href="http://devgirl.org">
        Holly Schinsky
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-navigation href="http://*/*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <!-- Media Plugin automatically adds file plugin -->
    <plugin name="cordova-plugin-media" spec="~2.1.0" />
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.0.9" />
    <!-- See this post to see how update to the latest iOS version supporting the super fast WkWebView
        http://devgirl.org/2016/01/11/a-faster-hybrid-app-for-the-new-year/ -->
    <!--<plugin name="cordova-plugin-wkwebview-engine" spec="~1.0.1" />-->
</widget>
